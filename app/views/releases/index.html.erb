
<h1 class="ui header" >Releases</h1>

<table class='ui orange table'>
  <thead>
    <tr>
      <th>Version</th>
      <th>Deliver date</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td><%= release.version %></td>
        <td><%= release.deliver_date %></td>
        <td><%= release.project %></td>
        <td><%= link_to 'Detalhes', release, class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_release_path(release), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', release, method: :delete, data: { confirm: 'VocÃª tem certeza disso?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

