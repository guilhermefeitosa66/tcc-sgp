
<h1 class="ui header" >Releases</h1>

<table class='ui orange table'>
  <thead>
    <tr>
      <th>Versão</th>
      <th>Deliver date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td><%= release.version %></td>
        <td><%= release.deliver_date %></td>
        <td><%= link_to 'Detalhes', [@project, release], class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_project_release_path(@project, release), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', [@project, release], method: :delete, data: { confirm: 'Você tem certeza disso?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Release', new_project_release_path(@project), class: 'ui teal button' %>
