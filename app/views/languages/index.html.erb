
<h1 class="ui header" >Languages</h1>

<table class='ui orange table'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language.name %></td>
        <td><%= link_to 'Detalhes', language, class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_language_path(language), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', language, method: :delete, data: { confirm: 'VocÃª tem certeza disso?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

