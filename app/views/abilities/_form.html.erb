<div class="ui form">
  <h4 class="ui dividing header">Informações</h4>
  <%= form_for(ability) do |f| %>
  <% if ability.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(ability.errors.count, "error") %> prohibited this ability from being saved:</h2>

    <ul>
      <% ability.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :scope %>
    <%= f.collection_select(:scope, Project.available, :id, :name, {:include_blank => 'Please Select'}, {:class=>' '}) %>
  </div>

  <div class="actions">
    <%= f.submit class:'ui teal button' %>
  </div>
  <% end %>
</div>
