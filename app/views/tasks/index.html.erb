
<h1 class="ui header" >Tasks</h1>

<table class='ui orange table'>
  <thead>
    <tr>
      <th>Description</th>
      <th>End date</th>
      <th>Status</th>
      <th>User story</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.end_date %></td>
        <td><%= task.status %></td>
        <td><%= task.user_story %></td>
        <td><%= link_to 'Detalhes', task, class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_task_path(task), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', task, method: :delete, data: { confirm: 'VocÃª tem certeza disso?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

