
<h1 class="ui header" ><%= @project.name %>: Sprints</h1>

<table class='ui orange table'>
  <thead>
    <tr>
      <th>Data ínicio</th>
      <th>Data de termino</th>
      <th>Inicio de execução</th>
      <th>Termino de execução</th>
      <th>Release versão</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sprints.each do |sprint| %>
      <tr>
        <td><%= sprint.start_date %></td>
        <td><%= sprint.end_date %></td>
        <td><%= sprint.execution_end_date %></td>
        <td><%= sprint.review_meeting_date %></td>
        <td><%= (sprint.release) ? sprint.release : "Não há release para essa Sprint" %></td>
        <td><%= link_to 'Detalhes', [@project,sprint], class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_project_sprint_path(sprint), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', [@project, sprint], method: :delete, data: { confirm: 'Você tem certeza disso?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Sprint', new_project_sprint_path(@project), class: 'ui teal button' %>
