
<h1 class="ui header" >Sprints</h1>

<table class='ui orange table'>
  <thead>
    <tr>
      <th>Project</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Planning start date</th>
      <th>Planning end date</th>
      <th>Execution start date</th>
      <th>Execution end date</th>
      <th>Review meeting date</th>
      <th>Retrospective meeting date</th>
      <th>Release</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sprints.each do |sprint| %>
      <tr>
        <td><%= sprint.project %></td>
        <td><%= sprint.start_date %></td>
        <td><%= sprint.end_date %></td>
        <td><%= sprint.planning_start_date %></td>
        <td><%= sprint.planning_end_date %></td>
        <td><%= sprint.execution_start_date %></td>
        <td><%= sprint.execution_end_date %></td>
        <td><%= sprint.review_meeting_date %></td>
        <td><%= sprint.retrospective_meeting_date %></td>
        <td><%= sprint.release %></td>
        <td><%= link_to 'Detalhes', sprint, class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_sprint_path(sprint), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', sprint, method: :delete, data: { confirm: 'VocÃª tem certeza disso?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

