<% content_for :style_css do %>
<style type="text/css">
body {
  background-color: #DADADA;
}
body > .grid {
  height: 100%;
}
.image {
  margin-top: -100px;
}
.column {
  max-width: 450px;
}
</style>
<% end %>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <%= image_tag "logo.png", class: 'image' %>
      <div class="content">
        Entre com sua conta.
      </div>
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "ui large form"}) do |f| %>
    <div class="ui stacked segment">

      <div class="field">
        <div class="ui left icon input">
          <i class="user icon"></i>
          <%= f.text_field :name, autofocus: true, placeholder: "Nome completo" %>
        </div>
      </div>

      <div class="field">
        <div class="ui left icon input">
          <i class="user icon"></i>
          <%= f.email_field :email, autofocus: false, placeholder: "Endereço de e-mail" %>
        </div>
      </div>

      <div class="field">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Senha" %>
        </div>
      </div>

      <div class="field">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmação de senha" %>
        </div>
      </div>

      <div class="field">
        <div class="ui left icon input">
          <i class="user icon"></i>
          <%= f.text_field :schedule, autofocus: false, placeholder: "Cronograma" %>
        </div>
      </div>

      <!-- Local -->
      <%= f.fields_for :local do |i| %>
        <div class="field">
          <div class="ui left icon input">
            <i class="home icon"></i>
            <%= i.text_field :name %></p>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="home icon"></i>
            <%= i.text_field :city %></p>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="home icon"></i>
            <%= i.text_field :state %></p>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="home icon"></i>
            <%= i.text_field :country %></p>
          </div>
        </div>
      <% end %>

      <%= f.submit "Cadastrar", class: 'ui fluid large teal submit button' %>
      <div class="ui error message"></div>
      <% end %>
    </div>
  </div>
</div>
