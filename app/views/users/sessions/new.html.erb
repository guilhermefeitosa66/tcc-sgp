<% content_for :style_css do %>
<style type="text/css">
body {
  background-color: #DADADA;
}
body > .grid {
  height: 100%;
}
.image {
  margin-top: -100px;
}
.column {
  max-width: 450px;
}
</style>
<% end %>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <%= image_tag "logo.png", class: 'image' %>
      <div class="content">
        Entre com sua conta.
      </div>
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "ui large form"}) do |f| %>
    <div class="ui stacked segment">
      <div class="field">
        <div class="ui left icon input">
          <i class="user icon"></i>
          <%= f.email_field :email, autofocus: true, placeholder: "endereÃ§o de E-mail" %>
        </div>
      </div>

      <div class="field">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Senha" %>
        </div>
      </div>
      <%= f.submit "Log in", class: 'ui fluid large teal submit button' %>
      <div class="ui error message"></div>
      <% end %>
    </div>
    <div class="ui message">
      Cadastrar? <%= link_to 'Sign Up', new_user_registration_path %>
    </div>
  </div>
</div>
