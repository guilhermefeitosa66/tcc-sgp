
<h1 class="ui header" >User Languages</h1>

<table class='ui orange table'>
  <thead>
    <tr>
      <th>Language</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_languages.each do |user_language| %>
      <tr>
        <td><%= user_language.language %></td>
        <td><%= user_language.user %></td>
        <td><%= link_to 'Detalhes', user_language, class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_user_language_path(user_language), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', user_language, method: :delete, data: { confirm: 'VocÃª tem certeza disso?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

