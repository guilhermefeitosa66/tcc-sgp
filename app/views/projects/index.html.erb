
<h1 class="ui header" >Projects</h1>

<table class='ui orange table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Local</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.size %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.local %></td>
        <td><%= link_to 'Detalhes', project, class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_project_path(project), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', project, method: :delete, data: { confirm: 'VocÃª tem certeza disso?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

