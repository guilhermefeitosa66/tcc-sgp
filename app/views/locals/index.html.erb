
<h1 class="ui header" >Locals</h1>

<table class='ui orange table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locals.each do |local| %>
      <tr>
        <td><%= local.name %></td>
        <td><%= local.country %></td>
        <td><%= local.state %></td>
        <td><%= local.city %></td>
        <td><%= link_to 'Detalhes', local, class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_local_path(local), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', local, method: :delete, data: { confirm: 'VocÃª tem certeza disso?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

