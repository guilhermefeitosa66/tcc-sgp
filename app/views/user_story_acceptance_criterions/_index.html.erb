
<h1 class="ui header" >Critérios de aceitação</h1>

<table class='ui orange table'>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_story_acceptance_criterions.each do |user_story_acceptance_criterion| %>
      <tr>
        <td><%= user_story_acceptance_criterion.description %></td>
        <td><%= user_story_acceptance_criterion.status %></td>
        <td><%= link_to 'Detalhes', project_theme_user_story_user_story_acceptance_criterion_path(@project, @theme, @user_story, user_story_acceptance_criterion), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_project_theme_user_story_user_story_acceptance_criterion_path(@project, @theme, @user_story, user_story_acceptance_criterion), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', project_theme_user_story_user_story_acceptance_criterion_path(@project, @theme, @user_story, user_story_acceptance_criterion), method: :delete, data: { confirm: 'Você tem certeza disso?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo critério de aceitação', new_project_theme_user_story_user_story_acceptance_criterion_path(@project, @theme, @user_story), class: 'ui teal button' %>
